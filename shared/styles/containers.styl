.container
  padding 15px
  &.positioned
    position relative

.wrap
  display none
  position absolute
  bottom 0px
  left 0px
  right 0
  top 93px
  z-index -1
  overflow auto
  -webkit-overflow-scrolling touch
  &.visible
    display block
    animation fade-in 350ms ease-in
    -webkit-transform-style preserve-3d

.button
  background #666
  color #fff
  border 1px solid transparent
  border-radius 15px
  padding 3px 20px
  font-size 0.9em
  font-weight 200
  cursor pointer
  &:hover
    background #555

section
  h1
    margin-left 10px

.editable
  margin 0
  padding 5px
  border none
  background none
  font-size inherit
  font-weight inherit
  width 100%
