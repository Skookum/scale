@keyframes pop
  0%
    transform scale3d(0.7, 0.7, 1)
  45%
    transform scale3d(1.1, 1.1, 1)
  70%
    transform scale3d(1.05, 1.05, 1)
  100%
    transform scale3d(1, 1, 1)

@keyframes popSmall
  0%
    transform scale3d(0.95, 0.95, 1)
  45%
    transform scale3d(1.05, 1.05, 1)
  70%
    transform scale3d(1.02, 1.02, 1)
  100%
    transform scale3d(1, 1, 1)

@keyframes puff
  0%
    transform scale3d(1, 1, 1)
    opacity 1
  15%
    transform scale3d(0.95, 0.95, 1)
    opacity 1
  100%
    transform scale3d(1.25, 1.25, 0)
    opacity 0

@keyframes slide-up
  0%
    opacity 0
    transform translate(0, 100px)
  80%
    transform translate(0, -15px)
  100%
    opacity 1
    transform translate(0, 0)

@keyframes slide-left
  0%
    opacity 0
    transform translate(200px, 0)
  80%
    transform translate(15px, 0)
  100%
    opacity 1
    transform translate(0, 0)

@keyframes card-drop
  0%
    transform rotateZ(60deg)
    opacity 0
  35%
    transform rotateZ(-40deg)
    opacity 1
  70%
    transform rotateZ(15deg)
  95%
    transform rotateZ(-2deg)
  100%
    transform rotateZ(0deg)

@keyframes fade
  from
    opacity 1
  to 
    opacity 0.25

@keyframes fade-in
  from
    opacity 0
  to 
    opacity 1

@keyframes fall-over
  0%
    transform rotateX(5deg) translate(0, 0px)
    height 50px
  70%
    transform rotateX(85deg) translate(0, 750px)
    height 50px
  100%
    transform rotateX(85deg) translate(0, 0px)
    height 0px