.resultsWrapper
  position relative

  .resultsSummary
    text-align center
    position absolute
    top 200px
    left 25%
    right 25%
    overflow hidden
    height auto
    padding 50px
    border 1px solid #ccc
    box-shadow 3px 3px 3px #ccc
    border-radius 12px
    transition all 0.15s ease-in-out
    &.hide
      left -50%
      right 150%
    &.noShow
      display none
    p
      padding 10px 0

    ul
      display inline-block
      width 33%
      float left



  .allResults
    position absolute
    top 180px
    left 100%
    right 0
    height auto
    overflow hidden
    transition left 0.15s ease-in-out
    &.show
      left 0
  table
    width 100%
    thead
      text-align left
    td, th
      border-bottom 1px solid #ddd
      padding-bottom 3px
      width 14%
      display inline-block
    tr:last-child
      td
        border-bottom 1px solid #000
        padding-bottom 12px
    .resultLocation
      width 72%


